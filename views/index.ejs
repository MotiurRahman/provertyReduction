<script type="text/javascript">

   
     
    $(document).ready(function() {  
    $('#status').change(function(){
      $("#tableBody").empty();
       var cur_status =  $(this).find("option:selected").attr('value');  

        $.ajax({
        url: '/api/'+cur_status,
        type: 'GET',
        dataType: 'json',
        
      })
      .done(function(result) {

        for (var i = 0; i < result.length; i++) {
        
          var table_row = $("<tr></tr>");
          var table_id = $("<td>"+result[i]._id+"</td>");
          var table_name = $("<td>"+result[i].name+"<br> Status:"+result[i].status+"</td>");
          var table_email = $("<td>"+result[i].father_name+"</td>");
          
          
          var table_address = $("<td>Divi:"+result[i].division +"<br> Dist:"+result[i].district +"<br>P.S:"+result[i].ps+"<br> Post Code:"+result[i].postCode +"<br> vill:"+result[i].area+"<br>Phone:"+result[i].phone+"<br>Email:"+result[i].email+"</td>");

          var reasonOfPoor = $("<td><b>Education:</b>"+result[i].lastDegree
                      +"<br><b>Savings:</b>"+result[i].saving
                      +"<br><b>T_A_Trainig:</b>"+result[i].t_a_trainig
                      +"<br><b>Working Scope:</b>"+result[i].working_scope
                      +"<br><b>Know_T_A_Trainig:</b>"+result[i].know_t_a_trainig
                      +"<br><b>Any_C_Land:</b>"+result[i].any_c_land
                      +"<br><b>Drug Addiction:</b>"+result[i].drugAddiction
                      +"<br><b>Natural Reson:</b>"+result[i].natural_reson+"</td>");


          
          table_row.append(table_id);
          table_row.append(table_name);
          
          table_row.append(table_email);
          table_row.append(table_address);
          table_row.append(reasonOfPoor);
          
          
          $("#tableBody").append(table_row);
        }
        

        //alert(result);
      })
      .fail(function() {
        console.log("error");
      })
      .always(function() {
        console.log("complete");
      });
           
    });
 });


  </script>


