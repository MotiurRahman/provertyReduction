<%- contentFor('body')%>  



<div id="page-wrapper">
 <div class="container-fluid">
  <br>
  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Edit:
        <small>Edit to My Institute</small>
      </h1>
      <div class="col-md-6 col-md-offset-3" style="text-align: center;">
        <div id="showResult" role="alert"></div>
      </div>
    </div>
  </div>
  <div class="col-xs-6">


    <form class="form-horizontal" role="form" method="post">

      <div class="form-group">
        <h6 class="column-title"><i class="fa fa-user fa-2x blue"> Institute Information</i></h6>
        <label for="name">Name:*</label>
        <input type="text" class="form-control" id="name" name="name" value="<%=data[0].name%>"  placeholder="Enter your Institute name" required>
        <span class="red"></span>
      </div>

      <div class="form-group">
        
        <label for="short_name">Institute short Name:*</label>
        <input type="text" class="form-control" id="short_name" name="short_name" value="<%=data[0].short_name%>" placeholder="Enter your Institute short name like BKTC" required>
        <span class="red"></span>
      </div>

      <div class="form-group">
        <label  for="email">Contact Email:</label>

        <input type="email" class="form-control" id="email" name="email" value="<%=data[0].email%>" placeholder="Enter Email" required>

      </div>


      <div class="form-group">
        <label  for="phone">Contact Phone:</label>

        <input type="tel" class="form-control" id="phone" name="phone" value="<%=data[0].phone%>"  placeholder="Enter contact number" required>

      </div>

      <div class="form-group">
        <label  for="webAddress">Web Address:</label>

        <input type="text" class="form-control" id="webAddress" name="webAddress" value="<%=data[0].webAddress%>"  placeholder="Enter Your web Address">

      </div>
       <div class="form-group">
        <label  for="userName">User Name:*</label>

        <input type="text" class="form-control" id="userName" name="userName" value="<%=data[0].userName%>" placeholder="Enter your user name" required>

      </div>


      </div>

      <div class="col-xs-6">

       <h6 class="column-title"><i class="fa fa-home fa-2x blue"> Address</i></h6>

       <div class="form-group">
        <label  for="division">Division:*</label>

        <input type="text" class="form-control" id="division" name="division" value="<%=data[0].division%>"  placeholder="Enter division name" required>

      </div>
      <div class="form-group">
        <label for="district">District:*</label>

        <input type="text" class="form-control" id="district" name="district" value="<%=data[0].district%>"  placeholder="Enter district Name">

      </div>
      <div class="form-group">
        <label for="ps">P.S:*</label>

        <input type="text" class="form-control" id="ps" name="ps" value="<%=data[0].ps%>"  placeholder="Enter ps Address" required>

      </div>
      <div class="form-group">
        <label  for="postCode">Post Code:*</label>

        <input type="number" class="form-control" id="postCode" name="postCode" value="<%=data[0].postCode%>"  placeholder="Enter post code" required>

      </div>

        <br>

      <div class="form-group">
      <h6 class="column-title"><i class="fa fa-graduation-cap fa-2x blue"> Academic Information</i></h6>

        <label for="training_name">List of Training Name</label>
        <p>Example <br>1. Automobiles<br> 2. Electronics</p>
       <textarea rows="8" cols="60" id="training_name" name="training_name"> <%=data[0].training_name%>
        
        </textarea>

      </div>

    </div>



    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
       <div class="form-group">
        <label>
          <input type="checkbox" id="check"> Yes, I would like to Update My Profile!
        </label>
      </div>

      <button type="submit" id="update" class="btn btn-primary btn-lg btn-block">Update</button>

    </div>
  </div>
</form>

</div>

</div>

</div>




<script type="text/javascript"> 
 $('#update').attr('disabled','disabled');
 

 $("#check").change( function(){
   if( $(this).is(':checked') ) {
     $('#update').removeAttr('disabled');
   }else{
    $('#update').attr('disabled','disabled');
  }
});

</script>