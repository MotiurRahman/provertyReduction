<script type="text/javascript"> 
 $('#insert').attr('disabled','disabled');
 $("#noMarrage").click(function(event) {
  $("#childNumber").hide();
});

 $("#yesMarrage").click(function(event) {
  $("#childNumber").show();
});

 

 $("#check").change( function(){
   if( $(this).is(':checked') ) {
     $('#insert').removeAttr('disabled');
   }else{
    $('#insert').attr('disabled','disabled');
  }
});

</script>